	"dependencies": {
		"@lucia-auth/adapter-prisma": "^3.0.2",
		"@prisma/client": "^5.6.0",
		"@unovis/svelte": "^1.3.1",
		"@unovis/ts": "^1.3.1",
		"lucia": "^2.7.4"
	},
	"type": "module",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
